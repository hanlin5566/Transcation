<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wiitrans.base.db.model.TermDetailsEvaBeanMapper">

	<select id="Select" parameterType="int"
		resultType="com.wiitrans.base.db.model.TermDetailsEvaBean">
		select * from term_evaluation where
		term_details_id=#{term_details_id} and translator_id =
		#{translator_id};
	</select>

	<insert id="Insert" parameterType="com.wiitrans.base.db.model.TermDetailsEvaBean">
		insert into
		term_evaluation(term_details_id,translator_id,evaluation,create_time)
		values(#{term_details_id},#{translator_id},#{evaluation},unix_timestamp(now()))

	</insert>
	<update id="Update" parameterType="com.wiitrans.base.db.model.TermDetailsEvaBean">
		update term_evaluation
		set evaluation = #{evaluation}
		where term_evaluation_id=#{term_evaluation_id}
	</update>

	<delete id="Delete" parameterType="int">
		delete from term_evaluation
		where term_evaluation_id=#{term_evaluation_id}
	</delete>

</mapper>