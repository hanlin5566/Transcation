<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ERROR" name="log4j" packages="">
	<appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>

		<RollingFile name="RollingFile" fileName="/opt/wiitrans/bundle/log/manager.log"
			filePattern="/opt/wiitrans/bundle/log/$${date:yyyy-MM}/%d{yyyy-MM-dd}-%i.log">
			<PatternLayout>
				<Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="24"
					modulate="true" />
				<SizeBasedTriggeringPolicy size="100 MB" />
			</Policies>
		</RollingFile>
		<RollingFile name="TMSVRFile" fileName="/home/log4j2-tmsvr.log"
			filePattern="/home/$${date:yyyy-MM}/%d{yyyy-MM-dd}-%i-tmsvr.log">
			<PatternLayout>
				<Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="24"
					modulate="true" />
				<SizeBasedTriggeringPolicy size="100 MB" />
			</Policies>
		</RollingFile>
	</appenders>
	<loggers>
		<logger name="manager" additivity="TRUE" level="ALL">

			<AppenderRef ref="RollingFile" level="ALL" />
		</logger>

		<logger name="storm" additivity="TRUE" level="ALL">
			<!-- <AppenderRef ref="Console" level="ALL" /> -->
		</logger>
		<logger name="tmsvr" additivity="TRUE" level="ALL">
			<AppenderRef ref="TMSVRFile" level="ALL" />
		</logger>
	</loggers>
</Configuration>  
